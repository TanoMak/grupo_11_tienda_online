<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <link href="/css/all.css" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">


</head>


<body>

    <!-- header -->
    <%- include("./partials/header.ejs") %>

        <main>



            <!-- Slideshow container -->
            <div class="slideshow-container">

                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                    <img src="https://images.unsplash.com/photo-1605565348518-bef3e7d6fed8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2076&q=80"
                        style="width:100%">
                </div>

                <div class="mySlides fade">
                    <img src="https://images.unsplash.com/photo-1511203466129-824e631920d7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2069&q=80"
                        style="width:100%">
                </div>

                <div class="mySlides fade">

                    <img src="https://images.unsplash.com/photo-1542330952-bffc55e812b2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2069&q=80"
                        style="width:100%">
                </div>

                <div class="mySlides fade">

                    <img src="https://images.unsplash.com/photo-1511732351157-1865efcb7b7b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80"
                        alt="#" style="width:100%">
                </div>


                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>

            <h3 class = "product-list-title">Productos en oferta</h3>

            <div class="products">


                <%products.forEach(function(prenda) { %>
        
                  <a href="/products//detail/<%=prenda.id%>">
        
                    
        
        
                    <article class="product-list-article">
                      <img src="/images/product-images/<%= prenda.images.length>0 ? prenda.images[0].name : "noimageproduct.jpg" %>" alt="x" class="product_img"
                      />
                      <br />
                      <br />
                      <div class="main-article">
                        <div class="main-article-numbers">
                          <p class="price"> $<%=prenda.price%>
                          </p>
                          <br />
                        </div>
                        <h4 class="description">
                          <%=prenda.product_name%>
                        </h4>
                        <% if(users && users.admin==1){ %>
                          <p> ID --- <%=prenda.id%></p>
                          
                          <% }else{ %>
                            <div class="add-to-cart">
                              <i class="fa-solid fa-bag-shopping"></i>
                            </div>
                         
                          <% } %>
                        <br />
                    
                        
                    
                      </div>
                    </article>
                  </a>
        
                  <%})%>
            </div>

            




            <section class="form-newsletter">
                <div class="form-container">
                    <h3 id="newsletter-title">NEWSLETTER</h3>
                    <P>Suscribite y enterate de todas las novedades</P>

                    <form action="#" method="POST">

                        <input type="email" class="newsletterBar" id="newsletterBar" name="email" placeholder="Email">
                        <input type="submit" name="contact" value="SUSCRIBIRME" id="suscribirme">
                    </form>
                </div>
            </section>








        </main>






        <script src="/js/slider.js"></script>

        <!-- footer -->

        <%- include("./partials/footer.ejs") %>
</body>


</html>