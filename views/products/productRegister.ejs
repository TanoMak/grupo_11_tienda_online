<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/css/all.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/login-style.css" rel="stylesheet">
    <link href="/css/product-style.css" rel="stylesheet">
    <%- include("../partials/head.ejs") %>

</head>

<body>

    <!-- header -->
    <%- include("../partials/header.ejs") %>


        <!-- main -->
        <main>
            <form action=""></form>
            <form class="container" enctype="multipart/form-data" action="/products/create" method="POST">
                <h1>Registro de producto</h1>
                <br>
                <div>
                    <div>
                        <input id="code" type="text" name="code" placeholder="Codigo"
                            value="<%= locals.oldData ? oldData.code : null %>">
                        <div id="error-front-msg-1"></div>

                        <% if (locals.errors && errors.code){ %>
                            <div class="text-danger">
                                <%= errors.code.msg %>
                            </div>
                            <% } %>


                    </div>
                    <div>
                        <input type="text" name="name" placeholder="Nombre" id="name"
                            value="<%= locals.oldData ? oldData.name : null %>">

                        <% if (locals.errors && errors.name){ %>
                            <div class="text-danger">
                                <%= errors.name.msg %>
                            </div>
                            <% } %>
                                <div id="error-front-msg-2"></div>

                    </div>
                    <div>
                        <input type="text" name="description" placeholder="DescripciÃ³n" id="description"
                            value="<%= locals.oldData ? oldData.description : null %>">

                        <% if (locals.errors && errors.description){ %>
                            <div class="text-danger">
                                <%= errors.description.msg %>
                            </div>
                            <% } %>

                                <div id="error-front-msg-3"></div>

                    </div>
                    <div>
                        <input type="number" name="price" placeholder="Precio" id="price"
                            value="<%= locals.oldData ? oldData.price : null %>">

                        <% if (locals.errors && errors.price){ %>
                            <div class="text-danger">
                                <%= errors.price.msg %>
                            </div>
                            <% } %>
                                <div id="error-front-msg-4"></div>

                    </div>
                    <div>
                        <select name="line" class="line" id="line">
                            <option value="" disabled selected>- Seleccionar Linea - </option>
                            <%Lines.forEach(Line=> { %>
                                <option value="<%= Line.id %>">
                                    <%= Line.name %>
                                </option>
                                <% }) %>
                        </select>

                        <% if (locals.errors && errors.line){ %>
                            <div class="text-danger">
                                <%= errors.line.msg %>
                            </div>
                            <% } %>

                                <div id="error-front-msg-5"></div>
                    </div>


                    <div>
                        <select name="category" class="category" id="category">
                            <option value="" disabled selected>- Seleccionar Categoria - </option>
                            <%Categories.forEach(Category=> { %>
                                <option value="<%= Category.id %>">
                                    <%= Category.name %>
                                </option>
                                <% }) %>
                        </select>

                        <% if (locals.errors && errors.category){ %>
                            <div class="text-danger">
                                <%= errors.category.msg %>
                            </div>
                            <% } %>

                                <div id="error-front-msg-6"></div>
                    </div>
                    <br>

                    <div class="color-selection-register">
                        <label for="color">Disponible en color</label><br>
                        <% Colors.forEach(Color=> { %>
                            <label><input type="checkbox" name="color" value="<%= Color.id %>" id="color">
                                <%= Color.name %>
                            </label><br>
                            <% }) %>

                                <div id="error-front-msg-7"></div>




                    </div>
                    <% if (locals.errors && errors.color){ %>
                        <div class="text-danger">
                            <%= errors.color.msg %>
                        </div>
                        <% } %>
                            <br>
                            <br>

                            <div class="size-selection-register">
                                <label for="size">Disponible en Talles</label><br>
                                <% Sizes.forEach(Size=> { %>
                                    <label><input type="checkbox" name="size" value="<%= Size.id %>" id="size">
                                        <%= Size.name %>
                                    </label><br>
                                    <% }) %>

                                        <div id="error-front-msg-8"></div>


                            </div>

                            <% if (locals.errors && errors.size){ %>
                                <div class="text-danger">
                                    <%= errors.size.msg %>
                                </div>
                                <% } %>
                                    <br>
                                    <br>


                                    <div>
                                        <input 
                                        accept="image/png, image/jpeg,image/gif"
                                        required 
                                        type="file" 
                                        name="image" 
                                        placeholder="Imagen" 
                                        multiple 
                                        id="image"
                                        >
                                        <% if (locals.errors && errors.image){ %>
                                            <div class="text-danger">
                                                <%= errors.image.msg %>
                                            </div>
                                            <% } %>

                                                <div id="error-front-msg-9"></div>
                                    </div>
                </div>

                <div><button type="submit"> Agregar Producto </button></div>
            </form>

            <div>
                <a href="/products/list">
                    <button class="back-to-product-list-btn" type="button">Volver al listado de productos
                    </button>
                </a>
            </div>





        </main>


        <!-- footer -->
        <%- include("../partials/footer.ejs") %>
            <script src="/js/productValidation.js"></script>
</body>

</html>