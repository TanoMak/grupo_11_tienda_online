<!DOCTYPE html>
<html lang="en">
   
<header>
    <%- include("../partials/head.ejs") %>
    <link href="css/all.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
	<link href="/css/login-style.css" rel="stylesheet">
</header>

<body>

    <!-- header -->
    <%- include("../partials/header.ejs") %>


    <!-- main -->
    <main>
        <form class="container" enctype="multipart/form-data" action="/products/edit/<%= Products.id %>?_method=PUT" method="POST">
            <h1>Editar Producto</h1>
            <label class="update-form-fields"><%= Products.name %> </label>        
            <br>
            <div>
                <div>
                    <input type="text" name="code" placeholder="Codigo" value="<%= Products.product_code %>">
                </div>
                <div>
                    <input type="text" name="name" placeholder="Nombre" value="<%= Products.product_name %>">
                </div>
                <div>
                    <input type="text" name="description" placeholder="DescripciÃ³n" value="<%= Products.description %>">
                </div>
                <div>
                    <input type="number" name="price" placeholder="Precio" value="<%= Products.price %>">
                </div>
                <div>
                    <select name="line" class="line" >
                        
                        
                        <option value="">- Modificar Linea - </option>
                        <% Lines.forEach(Line => { %>
                        <option value="<%= Line.id %>"><%= Line.name %> </option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <select name="category" class="category" >
                        
                        <option value="" >- Modificar Categoria - </option>
                        <% Categories.forEach(Category=> { %>
                        <option value="<%= Category.id %>"><%= Category.name %> </option>
                        <% }) %>
                    </select>
                </div>
                <br>

                <div class ="color-selection-register">
                    <label for="color">Disponible en color</label><br>
                        <% Colors.forEach(Color=> { %>
                        <label><input type="checkbox" name="color" value="<%= Color.id %>"> <%= Color.name %></label><br>
                        <% }) %>
            
                </div>
                <br>
                <br>

                <div class ="size-selection-register">

                    <label class="update-form-fields"><%= Products.size %></label>
                    <label for="size">Disponible en Talles</label><br>
                    <% Sizes.forEach(Size=> { %>
                    <label><input type="checkbox" name="size" value="<%= Size.id %>"> <%= Size.name %></label><br>
                    <% }) %>
            
                </div>
                <br>
                <div>
                    <input type="file" name="image" placeholder="Imagen">
                </div>            
            </div>
            <h3>
                <div><button type="submit"> Editar Producto </button></div> 
            </h3>
        </form>

    

        <form action="/products/delete/<%= Products.id %>?_method=DELETE" method="POST">
            <button class = "delete-product-btn">Borrar</button>
        </form>
        
    </main>


    <!-- footer -->
    <%- include("../partials/footer.ejs") %>
</body>

</html>