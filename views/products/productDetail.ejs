<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head.ejs") %>
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/product-style.css" rel="stylesheet" />
</head>


<body>

  <!-- header -->
  <%- include("../partials/header.ejs") %>


    <!-- main -->
    <div class="small-container single-product">
      <div class="row">
        <div class="col-2">
          <img src="/images/product-images/<%= prendas.images.name ? prendas.images.name : "noimageproduct.jpg" %>" alt="x" class="product_img" />
          <div class="small-img-row">
            <div class="small-img-col">
              <img src="/images/product-images/<%= prendas.images.name ? prendas.images.name : "noimageproduct.jpg" %>" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/product-images/<%= prendas.images.name ? prendas.images.name : "noimageproduct.jpg" %>" width="100%" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/product-images/<%= prendas.images.name ? prendas.images.name : "noimageproduct.jpg" %>"width="100%" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/product-images/<%= prendas.images.name ? prendas.images.name : "noimageproduct.jpg" %>" width="100%" class="small-img" />
            </div>
          </div>
        </div>
        
        <div class="col-2">
          <p>Productos / <%= prendas.category.name %></p>
          <h1><%= prendas.product_name %></h1>
          <h4><%= prendas.price %></h4>

          <select name="size-selection-product" class="size-selection-product" >
            <option value="" disabled selected>- Seleccionar Talle - </option>
            <% prendas.sizes.forEach(Size=> { %>
            <option value="<%= Size.name %>"><%= Size.name %> </option>
            <% }) %>
        </select>

        <select name="color-selection-product" class="color-selection-product" >
          <option value="" disabled selected>- Seleccionar Color - </option>
          <% prendas.colors.forEach(Color=> { %>
          <option value="<%= Color.name %>"><%= Color.name %> </option>
          <% }) %>
      </select>
  
          <input type="number" value="1" name="" class="cant" />
          <div class="div-button">
            <button class="button" style="vertical-align: middle">
              <span>Añadir al carrito</span>
            </button>
          </div>
          <h3>Descrpción del Producto</h3>
          <p>
            <%= prendas.description %>
          </p>
        </div>
      </div>
    </div>

    <!-- footer -->
    <%- include("../partials/footer.ejs") %>

</body>

</html>