<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head.ejs") %>
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/product-style.css" rel="stylesheet" />
</head>


<body>

  <!-- header -->
  <%- include("../partials/header.ejs") %>


    <!-- main -->
    <div class="small-container single-product">
      <div class="row">
        <div class="col-2">
          <img src="/images/<%= prenda.image ? prenda.image : "remera-blanca.jpg" %>" alt="x" class="product_img" />
          <div class="small-img-row">
            <div class="small-img-col">
              <img src="/images/<%= prenda.image ? prenda.image : "remera-blanca.jpg" %>" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/<%= prenda.image ? prenda.image : "remera-blanca.jpg" %>" width="100%" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/<%= prenda.image ? prenda.image : "remera-blanca.jpg" %>" width="100%" class="small-img" />
            </div>
            <div class="small-img-col">
              <img src="/images/<%= prenda.image ? prenda.image : "remera-blanca.jpg" %>" width="100%" class="small-img" />
            </div>
          </div>
        </div>
        <div class="col-2">
          <p>Home / Pants</p>
          <h1><%= prenda.product_name %></h1>
          <h4><%= prenda.price %></h4>
          <select name="" id="" class="select">
            <option value="">Select Size</option>
            <option value="">XXL</option>
            <option value="">XL</option>
            <option value="">L</option>
            <option value="">M</option>
            <option value="">S</option>
            <option value="">XS</option>
          </select>
          <input type="number" value="1" name="" class="cant" />
          <div class="div-button">
            <button class="button" style="vertical-align: middle">
              <span>Añadir al carrito</span>
            </button>
          </div>
          <h3>Descrpción del Producto</h3>
          <p>
            <%= prenda.description %>
          </p>
        </div>
      </div>
    </div>

    <!-- footer -->
    <%- include("../partials/footer.ejs") %>

</body>

</html>